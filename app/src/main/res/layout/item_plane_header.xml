<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <LinearLayout android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_width="match_parent" android:weightSum="5" android:gravity="center"
        android:layout_height="40dp" android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_plan_no_des"
            android:layout_weight="1" android:gravity="center"
            android:layout_width="match_parent" android:text="位数"
            android:layout_height="wrap_content" android:textSize="15sp"/>

        <LinearLayout
            android:layout_weight="1" android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:gravity="center" android:textSize="15sp"
                  android:id="@+id/tv_plan_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="号码"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_plan_times"
            android:layout_weight="1" android:gravity="center" android:textSize="15sp"
            android:layout_width="match_parent" android:text="出现次数"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_present"
            android:layout_weight="1" android:textSize="15sp"
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:text="往期概率"/>

        <TextView
            android:id="@+id/tv_plan_hot"
            android:layout_weight="1" android:textSize="15sp"
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:text="冷热"/>

    </LinearLayout>

</LinearLayout>